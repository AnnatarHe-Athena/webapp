{
    "presets": [
        [
            "env",
            {
                "modules": false,
                "targets": [
                    "last 2 versions",
                    "Firefox ESR",
                    "not ie < 11",
                    "not ie_mob <= 11",
                    "not op_mini all",
                    "not op_mob 12.1",
                    "not bb 7"
                ]
            }
        ],
        "react"
    ],
    "plugins": [
        "transform-decorators-legacy",
        "syntax-dynamic-import",
        "transform-object-rest-spread",
        "transform-class-properties",
        "react-hot-loader/babel",
        "styled-components"
    ]
}
